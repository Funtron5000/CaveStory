{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build cavestory",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceFolder}/source/src/**.cpp",
				"-o",
				"${workspaceFolder}/cavestory",
				"-I",
				"/usr/include/SDL2",
				"-I",
				"${workspaceFolder}/source/headers",
				"-L",
				"/usr/local/lib",
				"-l",
				"SDL2",
				"-l",
				"SDL2_image",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}